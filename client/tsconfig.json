{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@store": ["store/"],
      "@store/*": ["store/*"],
      "@api": ["api/"],
      "@modules/*": ["modules/*"],
      "@common/*": ["modules/common/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
